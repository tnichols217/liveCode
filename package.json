{
	"name": "livecode",
	"displayName": "livecode",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:livecode.server",
		"onCommand:livecode.helloWorld"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "livecode.helloWorld",
				"category": "livecode",
				"title": "Hello World"
			},
			{
				"command": "livecode.serverRefresh",
				"category": "livecode",
				"title": "Refresh Server Panel",
				"icon": "$(refresh)"
			},
			{
				"command": "livecode.pagesRefresh",
				"category": "livecode",
				"title": "Refresh Pages Panel",
				"icon": "$(refresh)"
			},
			{
				"command": "livecode.currentRefresh",
				"category": "livecode",
				"title": "Refresh Current Editor Panel",
				"icon": "$(refresh)"
			},
			{
				"command": "livecode.usersRefresh",
				"category": "livecode",
				"title": "Refresh Current Users Panel",
				"icon": "$(refresh)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "livecode",
					"title": "livecode",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"livecode": [
				{
					"id": "livecode.server",
					"name": "Server"
				},
				{
					"id": "livecode.pages",
					"name": "Pages"
				},
				{
					"id": "livecode.current",
					"name": "Current Editor"
				},
				{
					"id": "livecode.users",
					"name": "Online users"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "livecode.serverRefresh",
					"when": "view == livecode.server",
					"group": "navigation"
				},
				{
					"command": "livecode.pagesRefresh",
					"when": "view == livecode.pages",
					"group": "navigation"
				},
				{
					"command": "livecode.currentRefresh",
					"when": "view == livecode.current",
					"group": "navigation"
				},
				{
					"command": "livecode.usersRefresh",
					"when": "view == livecode.users",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.58.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"diff_match_patch": "^0.1.1",
		"socket.io": "^4.1.3",
		"uuid": "^8.3.2"
	}
}
